extends layout

block content
  div#minirefresh(class=['content', 'minirefresh-wrap'])
    div(class=['statistics', 'minirefresh-scroll'])
      for val, index in sources
        div(class=['item', `item-${index % 2 ? 'even' : 'odd'}`] data-source=index)
          div(class=['icon', `icon${index + 1}`])
          h2=val.name
          div.count=val.count
  div.footer
    div.copyright
      h3 Â© 2017 onedayl
    div.controller
  link(href='/css/index.css' rel='stylesheet')
  script(src='/js/index.js' type='text/javascript')
